<h1>Instagram</h1>

  <% @articles.each do |article| %>
<div>
  <h3><%= article.title %></h3>
  <p style="width:300px; height:auto"><%= image_tag(article.image, style:'width: 90%') %></p>
  <p><%= article.text %></p>
  <ul style="list-style: none">
    <li><%= link_to 'Show', article_path(article) %></p>
    <li><%= link_to 'Edit', edit_article_path(article) %></p>
    <li><%= link_to 'Destroy', article_path(article),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></p>
  </ul>
</div>
  <% end %>

<br/>
<br/>
  <%= link_to 'New article', new_article_path %>
